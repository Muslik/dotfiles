alias ..="cd .."
alias ...="cd ../../../"
alias ....="cd ../../../../"
alias gdp="cd ~/Desktop"
alias gdf="cd ~/dotfiles";
alias gwk="cd ~/Projects/work"
alias gdc="cd ~/Documents"
alias gdl="cd ~/Downloads"

alias binance="node ~/Projects/binance-calculator-premium/app/init.js"
alias ott="mux ott"

# NODE
alias ni="npm install"
alias nis="npm install && npm start"
alias ns="npm start"
alias n14="n exec 14.18.0"
alias ni14="n14 npm install"
alias ns14="n14 npm run start"
alias nis14="n14 npm install && n14 npm start"

#########################################
# OS-specific                           #
#########################################
if [[ "$(uname)" == "Darwin" ]]; then
    alias ls="ls -G"
    alias localip="ipconfig getifaddr en0"
    alias yota="sudo sysctl -w net.inet.ip.ttl=65"
    alias tsplay="open 'https://www.typescriptlang.org/play'"
    alias stfu="osascript -e 'set volume output muted true'"
else
    alias ls="ls --color=auto"
    alias localip="hostname -I | awk '{print \$1}'"
    alias pbcopy="xclip -selection clipboard"
    alias pbpaste="xclip -selection clipboard -o"
    alias polyconfig="vim ~/dotfiles/polybar/docky/config.ini"
    alias i3config="vim ~/dotfiles/i3/config"
    alias i3restart="i3-msg restart"
    alias polyrestart="polybar-msg cmd restart"
fi
