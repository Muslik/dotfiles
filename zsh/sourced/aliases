#########################################
# Quick dotfiles                        #
#########################################
alias zshconfig="vim ~/dotfiles/zsh/zshrc"
alias zshaliases="vim ~/dotfiles/zsh/sourced/aliases"
alias zshfunctions="vim ~/dotfiles/zsh/sourced/functions"
alias nvimconfig="vim ~/dotfiles/nvim/init.lua"
alias nvimplugins="vim ~/dotfiles/nvim/lua/plugins.lua"
alias tmuxconfig="vim ~/dotfiles/tmux.conf"
alias ssource='exec zsh'
#########################################
# Shorten common commands               #
#########################################
alias df="df -h"
alias ex="chmod +x"
alias cat="bat"
alias bc="bc -l"
alias q="cd ~/ && clear"
alias top="btop"
alias v="nvim"
alias vi="nvim"
alias vim="nvim"
alias mkdir="mkdir -p"
alias hosts="sudo vi /etc/hosts"
alias h="history"
alias hs="history | grep"
alias t="touch"
alias c="clear"
alias ll="ls -lhA"
alias lt="du -sh * | sort -h"
alias mnt='mount | grep -E ^/dev | column -t'
alias ct="column -t"
alias grep="grep --color=always"
alias mc="yazi"
alias lg="gitui"
alias mux="tmuxinator"
alias nap="~/go/bin/nap"

#########################################
# IP / Speedtest                        #
#########################################
alias speedtest='curl -s https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest.py | python3 -'
alias ip='curl ipinfo.io/ip'

#########################################
# GIT                                   #
#########################################
alias gs="git status"
alias gsw="git switch"
alias gcm="git commit"
alias ga="git add"
alias gl="git log --pretty=format:'%C(Yellow)%h%Creset %ad | %s%d [%C(Green)%an%Creset]' --graph --date=short"
alias gb="git branch"
alias gbnm="git branch --no-merged"
alias gc="git checkout"

#########################################
# asciinema                             #
#########################################
alias record="asciinema rec"
alias recordAuth="asciinema auth"

#########################################
# MY OWN COMMANDS                       #
#########################################
alias now='date +"%T | %d-%m-%Y"'
alias colors="curl -s https://gist.githubusercontent.com/HaleTom/89ffe32783f89f403bba96bd7bcd1263/raw/ | bash"

